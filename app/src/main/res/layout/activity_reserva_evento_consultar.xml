<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta mas detalles ingresando el identificador"
            android:gravity="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDENTIFICADOR"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="13dp"/>
            <EditText
                android:id="@+id/editConsultar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <Button
                android:id="@+id/botonConsultar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/consultar"
                android:onClick="consultarReservaEvento"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp">

            <TextView
                android:id="@+id/txtConsultar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:background="#350EFFC9"
                android:textStyle="bold|italic"
                android:text=" "
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/exportbtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Exportar"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/eliminar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_marginLeft="7dp"
                android:onClick="eliminarReservaEvento"/>
        </LinearLayout>
